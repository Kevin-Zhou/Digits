<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
            android:src="@drawable/hero"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <Button
                android:id="@+id/Instructions"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Instructions"
            android:background="@drawable/mybutton3"
                android:layout_below="@+id/imageView3"
                android:fontFamily="font"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_marginRight="20dp"
            android:textColor="#FF016CA2"
            android:paddingTop="1dp" />

        <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Play"
            android:layout_below="@+id/Instructions"
                android:layout_alignBaseline="@+id/imageView3"
            android:id="@+id/startGame"
                android:background="@drawable/mybutton3"
                android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="#FF016CA2"
            android:paddingLeft="2dp"
            android:paddingTop="1dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Multi-Player"
            android:layout_below="@+id/startGame"
            android:layout_alignBaseline="@+id/imageView3"
            android:id="@+id/multiplayer"
            android:background="@drawable/mybutton3"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_marginLeft="20dp"
            android:textColor="#FF016CA2" />
    </LinearLayout>


    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
    android:src="@drawable/settings"
        android:layout_alignParentLeft="true"
        android:id="@+id/setting"
        android:scaleType="fitCenter"
        android:background="@drawable/mybutton4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp" />


    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/share"
        android:scaleType="fitCenter"
        android:background="@drawable/mybutton4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/share"
                android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp" />


    </RelativeLayout>




