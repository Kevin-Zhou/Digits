<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <size
                android:width="60px"
                android:height="60px"/>
            <stroke android:width="1dip" android:color="#16F9AE" />
            <solid android:color="#16F9AE"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <size
                android:width="60px"
                android:height="60px"/>
            <stroke android:width="100dip" android:color="#00ACFF" />
            <solid android:color="#00ACFF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"
            android:color="#00ACFF">
            <size
                android:width="60px"
                android:height="60px"/>
            <stroke android:width="1dip" android:color="#00ACFF" />
            <solid android:color="#00fff4f6"/>
        </shape>
    </item>
</selector>